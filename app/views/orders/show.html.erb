<p id="notice"><%= notice %></p>

<p>
  <strong>Ordering date:</strong>
  <%= @order.ordering_date %>
</p>

<p>
  <strong>Customer:</strong>
  <%= @order.customer.name %>
</p>

<p>
  <strong>Remark:</strong>
  <%= @order.remark %>
</p>

<hr></hr>
<h2> Order Item</h2>
<ul>
  <% @order.order_items.each do |order_item| %>
  <li> <%= order_item.menu_item.name %> - RM <%= order_item.menu_item.unit_price %> x <%= order_item.quantity %></li>

  <% end %>  
</ul>

<hr></hr>
<h2> Create Order Item</h2>

<%= form_with(url: create_order_items_orders_path, model: OrderItem.new(order_id: @order.id), local: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :order_id %>
  </div>

  <div class="field">
    <%= form.label :menu_item_id %>
    <%= form.select :menu_item_id, MenuItem.order(:name).map { |menu_item| [menu_item.name, menu_item.id]}, include_blank: "Pls select a item" %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
