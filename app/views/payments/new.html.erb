<h1>Payments</h1>

<%= form_tag payments_path do %>
    <table style="width: 100%; border: 1px solid">
        <tr>
            <th>Total Amount</th>
            <th>Credit Card Type</th>
            <th>Credit Card No</th>
            <th>Card Owner Name</th>
            <th>Card Expiry Date</th>
            <th>CSV Number</th>
        </tr>
        <tr>
            <td style="text-align: center"><%= @order.total_amount %></td>
            <td style="text-align: center"><%= text_field_tag "Credit Card Type" %></td>
            <td style="text-align: center"><%= text_field_tag "Credit Card No" %></td>
            <td style="text-align: center"><%= text_field_tag "Card Owner Name" %></td>
            <td style="text-align: center"><%= text_field_tag "Card Expiry Date" %></td>
            <td style="text-align: center"><%= text_field_tag "CSV Number" %></td>
        </tr>
        <tr>
            <td colspan="6"><%= submit_tag "Payment"%></td>
        </tr>
    </table>
<% end %>
